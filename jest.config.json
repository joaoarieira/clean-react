{
  "roots": ["<rootDir>/src"],
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{ts,tsx}"
  ],
  "coverageDirectory": "coverage",
  "transform": {
    ".+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  }
}